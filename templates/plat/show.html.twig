{% extends 'base.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}

<div class="container col-4 mx-auto mt-5 pt-5">
    <h1 class="pt-5">{{ plat.nom }}</h1>

    <table class="table responsive-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ plat.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plat.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ plat.prix }}</td>
            </tr>
            <tr>
                <th>Afficher sur la page d'accueil</th>
                <td>{{ plat.afficherSurPageAccueil ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ plat.categoriePlat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_plat_index') }}">back to list</a>

    <a href="{{ path('app_plat_edit', {'id': plat.id}) }}">edit</a>

    {{ include('plat/_delete_form.html.twig') }}
</div>
{% endblock %}
