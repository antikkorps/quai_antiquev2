{% extends 'base.html.twig' %}

{% block title %}Horaire{% endblock %}

{% block body %}
    


<div class="opening_hours_table table-responsive" id="opening-hours-tab">
    <table class="table caption-top">
  <caption>Horaires du {{ horaire.jour }}</caption>
  <thead>
    <tr class="text-center">
      <th scope="col">Id</th>
      <th scope="col">Jour</th>
      <th scope="col">midi</th>
      <th scope="col">Capacité midi</th>
        <th scope="col">soir</th>
        <th scope="col">capacite soir</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
  <tr class="text-center">
      <td>{{ horaire.id }}</td>
        <td>{{ horaire.jour }}</td>
      <td>{{ horaire.ouvertureMidi|date('H:i') }} - {{ horaire.fermetureMidi|date('H:i') }}</td>
      <td>{{ horaire.capaciteMidi }}</td>
      <td>{{ horaire.ouvertureSoir|date('H:i') }} - {{ horaire.fermetureSoir|date('H:i') }}</td>
        <td>{{ horaire.capaciteSoir }}</td>
    </tr>
    </tbody>
</table>
