{% extends 'base.html.twig' %}

{% block title %}Horaire index{% endblock %}

{% block body %}
<div class="opening_hours_table table-responsive" id="opening-hours-tab">
    <table class="table caption-top">
  <caption>Horaires d'ouvertures</caption>
  <thead>
    <tr class="text-center">
      <th scope="col">Jour de la semaine</th>
      <th scope="col"colspan="3">Midi</th>
      <th scope="col" colspan="3">Soir</th>
      {% if app.user and app.user.roles[0] == 'ROLE_ADMIN' %}
      <th scope="col">Modifier</th>
      <th scope="col">Voir</th>
      {% endif %}
    </tr>
  </thead>
  <tbody class="table-group-divider">

  {% for horaire in horaires %}

    <tr class="text-center">
      <th scope="row text">{{ horaire.jour }}</th>
      
      <td>{{ horaire.ouvertureMidi ? horaire.ouvertureMidi|date('H:i') : 'Fermé' }}</td>
      <td>-</td>
      <td>{{ horaire.fermetureMidi ? horaire.fermetureMidi|date('H:i') : 'Fermé' }}</td>
      <td>{{ horaire.ouvertureSoir ? horaire.ouvertureSoir|date('H:i') : 'Fermé' }}</td>
      <td>-</td>
      <td>{{ horaire.fermetureSoir ? horaire.fermetureSoir|date('H:i') : 'Fermé' }}</td>
        {% if app.user and app.user.roles[0] == 'ROLE_ADMIN' %}
        <td>
      <a href="{{ path('app_horaire_edit', {'id': horaire.id}) }}" class="btn btn-primary m-auto align-content-center"><svg
  width="24"
  height="24"
  viewBox="0 0 24 24"
  xmlns="http://www.w3.org/2000/svg"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
</svg></a>
        </td>
        <td>
        <a href="{{ path('app_horaire_show', {'id': horaire.id}) }}" class="btn btn-primary m-auto align-content-center"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
